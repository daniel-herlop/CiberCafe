<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CiberCafe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/icons</item>
        <item name="colorSecondaryVariant">@color/icons</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/purple_500</item>   <!--fondo de la action bar en modo oscuro-->
        <item name="colorOnSurface">@color/white</item>      <!--texto de la action bar en modo oscuro-->
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/icons</item>                   <!--header background-->
        <item name="android:windowBackground">@color/primary</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/icons</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/primary_text</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/primary_text</item> <!-- days of the week-->
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">#f3f3f3</item>
        <item name="android:textColor">#f3f3f3</item>
        <item name="android:textColorPrimary">#f3f3f3</item>
        <item name="android:background">@color/primary</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonStyle</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary_text</item>
    </style>
</resources>