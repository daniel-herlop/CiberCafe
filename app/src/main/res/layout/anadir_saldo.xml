<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <TextView
        android:id="@+id/viewUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:text="@string/saldoAAnadir"
        android:textColor="@color/primary_text"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/entradaSaldo"
        android:layout_width="42dp"
        android:layout_height="46dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/primary_text"
        android:ems="10"
        android:inputType="number"
        android:maxLength="3"
        android:textColor="@color/primary_text"
        android:textCursorDrawable="@null"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/viewUsuario"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/viewUsuario"
        app:layout_constraintTop_toBottomOf="@+id/viewUsuario" />

    <Button
        android:id="@+id/botonAnadirSaldo"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/icons"
        android:onClick="abrirPaypal"
        android:text="@string/pagar"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/entradaSaldo"
        app:layout_constraintStart_toStartOf="@+id/entradaSaldo"
        app:layout_constraintTop_toBottomOf="@+id/entradaSaldo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="21dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:text="â‚¬"
        android:textAlignment="textStart"
        android:textColor="@color/primary_text"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/entradaSaldo"
        app:layout_constraintTop_toTopOf="@+id/entradaSaldo" />
</androidx.constraintlayout.widget.ConstraintLayout>